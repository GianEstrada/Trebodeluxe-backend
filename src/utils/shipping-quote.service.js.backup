  async getFormattedAddressFromPostalCode(postalCode) {
    try {
      const addressData = await this.getAddressFromPostalCode(postalCode);
      
      // Determinar la fuente basada en los datos
      let source = 'unknown';
      if (this.postalCodeCache.has(postalCode)) {
        source = 'local';
      } else if (addressData.country_code !== 'MX') {
        source = 'zippopotam';
      } else if (addressData.area_level1 === 'M√©xico' && addressData.area_level2 === 'Ciudad') {
        source = 'generic';
      } else {
        source = 'manual';
      }
      
      return this.transformAddressData(addressData, source);
    } catch (error) {
      throw new Error(`Error obteniendo direcci√≥n formateada: ${error.message}`);
    }
  }

